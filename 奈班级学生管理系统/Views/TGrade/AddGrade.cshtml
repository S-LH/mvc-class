        $(document).ready(function () {
            $('#example').DataTable({
                "pagingType": "input",@* 输入跳转指定页面 *@
                "lengthMenu": [[6, 20, -1], [6, 20, "全部"]],@* 选中显示的页面条数 *@
                language: {
                "sProcessing": "处理中...",
                    "sLengthMenu": "显示 _MENU_ 项结果",
                        "sZeroRecords": "没有匹配结果",
