    <script src="~/DataTables-1.10.21/jquery.dataTables.min.js"></script>

    <style>
        .stuList {
            margin-top: 20px;
        }

        .course {
            margin-top: 20px;
        }

        td {
            font-size: 12px;
            font-family: 正楷;
            color: #000000A6;
        }

  
