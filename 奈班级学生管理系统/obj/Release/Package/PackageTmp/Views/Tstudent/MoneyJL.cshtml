
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MoneyJL</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>
<body>

    <div style="height: 60px; line-height: 60px; padding: 0px 14px 0px 5px;">
        <div style="padding-top:0px; padding-bottom:50px;">
            <span style="font-size: 25px; font-weight: 600; position: relative; color: rgba(0,0,0,.65);">学生管理 </span>


        </div>
    </div>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>缴费类型</th>
            <th>金额</th>
            <th>班级</th>
            <th>状态</th>
            <th>操作</th>
        </tr>


        @foreach (var item in ViewBag.payclasslist )
        {
    <tr>
        <td>@item.stely</td>
        <td>@item.money</td>
        <td>@item.classname 生活委员 @item.stuname</td>
        <td>@item.state</td>
        <td>
            <a href="~/Tstudent/DelPay?id=@item.PayID" onclick="return confirm('是否确定删除')">删除</a>
            @*<a href="~/Tstudent/DetailPay?id=@item.PayID">详情</a>*@
        </td>
    </tr>
                }
         

        </table>

</body>
</html>
